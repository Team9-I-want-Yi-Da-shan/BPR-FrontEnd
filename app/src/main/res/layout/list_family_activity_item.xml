<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="15dp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/FamilyActivityItem_TimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="50dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="time"
        android:textColor="@color/black"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/FamilyActivityItem_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkable="false"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/FamilyActivityItem_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Title"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/FamilyActivityItem_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Title"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/FamilyActivityItem_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="start time - end time"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
