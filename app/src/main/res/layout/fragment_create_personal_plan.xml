<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.CreatePersonalActivityFragment"
    android:id="@+id/CreatePersonalActivity_Card"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="340dp"
    android:layout_height="480dp"
    android:layout_margin="30dp"
    android:layout_gravity="center"
    android:checkable="false"
    android:clickable="false"
    android:focusable="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:layout_constraintEnd_toStartOf="@+id/Main_PersonalPlan"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/Main_UserGreeting"
    android:backgroundTint="@color/white">

    <ImageButton
        android:id="@+id/CreatePersonalPlan_CloseCreatePlanCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_close_24dp"
        android:background="@color/white"/>

    <ImageButton
        android:id="@+id/CreatePersonalPlan_CreatePlanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_check_24"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/CreatePersonalPlan_TitleTextFieldLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="8dp"
            android:hint="Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_HomeLogo"
            app:expandedHintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/CreatePersonalPlan_TitleTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/CreatePersonalPlan_DescriptionTextFieldLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="8dp"
            android:hint="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_HomeLogo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/CreatePersonalPlan_DescriptionTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/CreatePersonalPlan_CommentTextFieldLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="8dp"
            android:hint="Description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_HomeLogo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/CreatePersonalPlan_CommentTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

